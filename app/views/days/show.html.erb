<h2>On This Day:</h2>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Content</th>
      <th>Favorite?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @day.date %></td>
        <td><%= @day.title %></td>
        <td><%= @day.content %></td>
        <td><%= @day.favorite %></td>
        <td><%= link_to "Show", @day %></td>
        <td><%= link_to "Edit", edit_day_path(@day) %></td>
        <td><%= link_to "Destroy", @day, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
  </tbody>
</table>

<br>

<%= link_to "New Day", new_day_path %>
